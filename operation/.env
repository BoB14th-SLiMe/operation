# ============================================
# OT Security Monitoring System - Environment Variables
# ============================================

# Elasticsearch Configuration
ELASTICSEARCH_HOST=100.126.141.58
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=ot-security-packets

# Network Interface (호스트의 실제 인터페이스)
# veth1@veth0 형태로 보이는 경우 @veth0 제거하고 veth1만 사용
NETWORK_INTERFACE=veth1

# BPF Filter (optional - 예: "tcp port 502")
BPF_FILTER=

# Rolling Interval (분 단위, 0 = 무제한 실시간 스트리밍)
ROLLING_INTERVAL=0

# Logging
LOG_LEVEL=INFO

# Resource Limits
PARSER_MEMORY_LIMIT=2g
PARSER_CPU_LIMIT=2.0
